generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String
  passwordHash String   @map("password_hash")
  usageCount   Int      @default(0) @map("usage_count")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  sessions          Session[]
  feynmanSessions   FeynmanSession[]
  layerAnalyses     LayerAnalysis[]
  rehearsalSessions RehearsalSession[]

  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  token     String   @unique
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@map("sessions")
}

model FeynmanSession {
  id             String   @id @default(cuid())
  userId         String   @map("user_id")
  title          String?
  starStory      String   @map("star_story")
  analysisResult Json?    @map("analysis_result")
  scores         Json?
  createdAt      DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt(sort: Desc)])
  @@map("feynman_sessions")
}

model LayerAnalysis {
  id          String   @id @default(cuid())
  userId      String   @map("user_id")
  title       String?
  inputText   String   @map("input_text")
  layers      Json?
  suggestions Json?
  createdAt   DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt(sort: Desc)])
  @@map("layer_analyses")
}

model RehearsalSession {
  id               String   @id @default(cuid())
  userId           String   @map("user_id")
  scenario         String
  interviewerStyle String   @map("interviewer_style")
  messages         Json     @default("[]")
  feedback         Json?
  status           String   @default("active")
  createdAt        DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt(sort: Desc)])
  @@map("rehearsal_sessions")
}
